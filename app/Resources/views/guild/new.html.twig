{% extends 'base.html.twig' %}

{% block javascripts %}
{% endblock %}

{% block body %}
    <header>
        <div class="header-content">
            <div class="header-content-inner">
                <h1 id="homeHeading">Track New Guild</h1>
                <div class="center">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    {% for type, messages in app.session.flashBag.all() %}
                        {% for message in messages %}
                            <div class="saved alert alert-{{ type }} fade in alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert"><span
                                            aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    <div class="input-group center-element">
                        {{ form_widget(form.realm, {'attr': {'class': 'realm form-control input-sm'}}) }}
                        {{ form_widget(form.name) }}
                    </div>
                    {{ form_widget(form.track) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </header>
{% endblock %}

